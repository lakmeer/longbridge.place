---
import type { CollectionEntry } from 'astro:content'
import PersonCard from '@comp/PersonCard.astro'
import { getEntry } from 'astro:content'

interface Props {
  src: string
  heading?: string
}

const { src, heading } = Astro.props
const entry = await getEntry('person', src) as CollectionEntry<'person'>
---

{ heading && <h2>{entry?.data.day_name}</h2> }
<div class="not-prose">
  <PersonCard size="sm" person={entry} link=`/person/${src}` />
</div>
